[bar/default]
height = 32
offset-y = 0
top = true
fixed-center = true
locale = fr_FR.UTF-8
tray-position = right
tray-maxsize = 22
line-size = 3
enable-ipc = true

padding-top = 2
padding-left = 2
padding-right = 2

module-margin = 1

font-0 = System San Francisco Display:size=18;2
font-1 = Font Awesome 6 Brands,Font Awesome 6 Brands Regular:style=Regular
font-2 = Font Awesome 6 Free,Font Awesome 6 Free Solid:style=Solid
font-3 = Font Awesome v4 Compatibility,Font Awesome v4 Compatibility Regular:style=Regular
font-4 = Font Awesome 6 Free,Font Awesome 6 Free Regular:style=Regular

modules-left = temperature battery backlight pulseaudio
modules-center = clickdate
modules-right = pomodoro

[module/clickdate]
type = custom/script
format-prefix-foreground = ${colors.accent}
exec = echo "ÔÅ≥ $(date +'%A %d %B %Y') - ÔÄó $(date +'%H:%M:%S')"
tail = false
interval = 1
click-left = gsimplecal

[module/date]
type = internal/date
date = %d %B %Y,  %{F#D8DEE9}%H:%M:%S

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = <ramp-volume> <label-volume>
label-muted = ÔÄ¶ ÔÄç
ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄß
click-right = pavucontrol

[module/battery]
type = internal/battery
full-at = 95

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll-interval = 20

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%
animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-framerate = 2000

format-discharging = <animation-discharging> <label-discharging>
label-discharging = %percentage%%
animation-discharging-0 = ÔâÄ
animation-discharging-1 = ÔâÅ
animation-discharging-2 = ÔâÇ
animation-discharging-3 = ÔâÉ
animation-discharging-4 = ÔâÑ
animation-discharging-framerate = 2000

label-full = ÔâÄ 100%

; Source: https://www.reddit.com/r/archlinux/comments/6wxzxl/using_light_for_polybar_backlight_module/
[module/backlight]
type = custom/script
interval = 0.2
exec = ~/.config/i3/polybar/scripts/blacklight.sh

scroll-up = exec light -A 5
scroll-down = exec light -U 5

format-prefix = "ÔÇ£ "
format-suffix = "%"

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[module/temperature]
type = internal/temperature
interval = 5

; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon7/temp1_input

base-temperature = 20
warn-temperature = 65
label = üå°Ô∏è %temperature-c%

[module/pomodoro]
type = custom/script
exec = ~/.config/i3/polybar/scripts/pomodoro/pomodoro.py
tail = true
click-left = echo -n "toggle_pause" | socat - UNIX-CLIENT:/tmp/pomodoro.sock
click-right = echo -n "reset" | socat - UNIX-CLIENT:/tmp/pomodoro.sock
scroll-up = echo -n "increase_work_period" | socat - UNIX-CLIENT:/tmp/pomodoro.sock
scroll-down = echo -n "decrease_work_period" | socat - UNIX-CLIENT:/tmp/pomodoro.sock

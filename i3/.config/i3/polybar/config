[bar/default]
height = 32
offset-y = 0
top = true
fixed-center = true
locale = fr_FR.UTF-8
tray-position = right
tray-maxsize = 22
line-size = 3
enable-ipc = true

padding-left = 0
padding-right = 3
module-margin = 2

font-0 = System San Francisco Display:size=18;2
font-1 = Font Awesome 6 Brands,Font Awesome 6 Brands Regular:style=Regular
font-2 = Font Awesome 6 Free,Font Awesome 6 Free Solid:style=Solid
font-3 = Font Awesome v4 Compatibility,Font Awesome v4 Compatibility Regular:style=Regular
font-4 = Font Awesome 6 Free,Font Awesome 6 Free Regular:style=Regular

modules-left = i3
modules-center = clickdate pomodoro
modules-right = temperature battery backlight pulseaudio

[module/clickdate]
type = custom/script
format-prefix-foreground = ${colors.accent}
exec = date +'%A %d %B %Y ~ %H:%M:%S'
tail = false
interval = 1
click-left = gsimplecal

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true
format = <label-mode><label-state>
label-mode-padding = 2
label-focused = %index%  %icon%
label-focused-padding = 2
label-unfocused = %index%  %icon%
label-unfocused-padding = 2
label-visible = %index%  %icon%
label-visible-padding = 2
label-urgent = %index%  %icon%

label-focused-foreground = #35ad04
label-focused-underline = #35ad04

ws-icon-0 = 1;Ôâ®
ws-icon-1 = 2;ÔÅ≠
ws-icon-2 = 3;ÔÑ†
ws-icon-3 = 4;ÔÜò
ws-icon-4 = 5;ÔÅª
ws-icon-5 = 6;ÔÖú
ws-icon-6 = 7;Ôâ©
ws-icon-7 = 8;ÔÑ°
ws-icon-8 = 9;ÔÖã

[module/date]
type = internal/date
date = %d %B %Y,  %{F#D8DEE9}%H:%M:%S

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5
format-volume = <ramp-volume> <label-volume>
label-muted = ÔÄ¶ ÔÄç
ramp-volume-0 = ÔÄ¶
ramp-volume-1 = ÔÄß
ramp-volume-2 = ÔÄß
click-right = pavucontrol

[module/battery]
type = internal/battery
full-at = 95

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll-interval = 20

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%
animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-framerate = 2000

format-discharging = <animation-discharging> <label-discharging>
label-discharging = %percentage%%
animation-discharging-0 = ÔâÄ
animation-discharging-1 = ÔâÅ
animation-discharging-2 = ÔâÇ
animation-discharging-3 = ÔâÉ
animation-discharging-4 = ÔâÑ
animation-discharging-framerate = 2000

label-full = ÔâÄ 100%

; Source: https://www.reddit.com/r/archlinux/comments/6wxzxl/using_light_for_polybar_backlight_module/
[module/backlight]
type = custom/script
interval = 0.2
exec = ~/.config/i3/polybar/scripts/blacklight.sh

scroll-up = exec light -A 5
scroll-down = exec light -U 5

format-prefix = "ÔÇ£ "
format-suffix = "%"

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

[module/temperature]
type = internal/temperature
interval = 5

; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon7/temp1_input

base-temperature = 20
warn-temperature = 65
label = üå°Ô∏è %temperature-c%

[module/pomodoro]
type = custom/script
exec = ~/.config/i3/polybar/scripts/pomodoro.py
tail = true
click-left = echo -n "toggle_pause" | socat - UNIX-CLIENT:/tmp/pomodoro.sock
click-right = echo -n "reset" | socat - UNIX-CLIENT:/tmp/pomodoro.sock
scroll-up = echo -n "increase_work_period" | socat - UNIX-CLIENT:/tmp/pomodoro.sock
scroll-down = echo -n "decrease_work_period" | socat - UNIX-CLIENT:/tmp/pomodoro.sock
; click-middle = ~/.config/i3/polybar/scripts/pomodoro.py

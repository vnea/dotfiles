set $open_chrome exec "if [ $(wmctrl -lx | cut -d' ' -f4 | grep -c google-chrome) -eq 0 ]; then google-chrome; else i3-msg workspace 1:; fi"
set $open_idea exec "if [ $(wmctrl -lx | cut -d' ' -f4 | grep -c idea) -eq 0 ]; then ~/.local/share/JetBrains/Toolbox/apps/IDEA-U/ch-0/$(ls -altr ~/.local/share/JetBrains/Toolbox/apps/IDEA-U/ch-0/ | awk '{print $9}' | grep -E '^[[:digit:]]+\.[[:digit:]]+\.[[:digit:]]+$' | tail -n 1)/bin/idea.sh; else i3-msg workspace 2:; fi"
set $open_term exec "if [ $(wmctrl -lx | cut -d' ' -f4 | grep -c terminator) -eq 0 ]; then terminator; else i3-msg workspace 3:; fi"
set $open_slack exec "if [ $(wmctrl -lx | cut -d' ' -f4 | grep -c slack) -eq 0 ]; then slack; else i3-msg workspace 4:; fi"
set $open_file exec "nemo ~/Bureau"
set $open_subl exec "if [ $(wmctrl -lx | cut -d' ' -f4 | grep -c sublime_text) -eq 0 ]; then subl; else i3-msg workspace 6:; fi"
